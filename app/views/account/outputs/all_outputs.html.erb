<%= render 'account/shared/page' do |page| %>
  <% page.title t('.section') %>
  <% page.body do %>
    <% @outputs.each do |output| %>
      <%= cable_ready_updates_for output do %>
        <%= render 'account/shared/box', divider: true do |box| %>
          <% box.title "Model: #{output.prompt_execution.model}" %>
          <% box.description do %>
            <%#= t('.description') %>
            <%#= t('.manage_description') if can? :manage, output %>
          <% end %>

          <% box.body do %>
            <% with_attribute_settings object: output, strategy: :label do %>
              <div class="grid grid-cols-12 w-full">
                <div class="col-span-3">
                  <%= render 'shared/attributes/text', attribute: :label %>
                </div>
                <div class="col-span-3">
                <%= render 'shared/attributes/number', attribute: :input_tokens %>
                </div>
                <div class="col-span-3">
                <%= render 'shared/attributes/number', attribute: :output_tokens %>
                </div>
                <div class="col-span-3">
                <%= render 'shared/attributes/text', attribute: :message_id_api %>
                <%= render 'shared/attributes/number', attribute: :user_rating %>
                </div>
              </div>
              <div class="bg-gray-100 p-2 rounded-md">
                <code>
                  <%= simple_format output.results %>
                </code>
              </div>
              <%# ðŸš… super scaffolding will insert new fields above this line. %>
            <% end %>
          <% end %>

          <% box.actions do %>
            <%#= link_to t('.buttons.edit'), [:edit, :account, @output], class: first_button_primary if can? :edit, @output %>
            <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
            <%#= button_to t('.buttons.destroy'), [:account, @output], method: :delete, class: first_button_primary, data: { confirm: t('.buttons.confirmations.destroy', model_locales(@output)) } if can? :destroy, @output %>
            <%= link_to t('global.buttons.back'), [:account, output.prompt_execution.prompt], class: first_button_primary %>
          <% end %>

          <% box.raw_footer do %>
            <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
          <% end %>
        <% end %>
      <% end %>

      <%# ðŸš… super scaffolding will insert new children above this line. %>
    <% end %>
  <% end %>
<% end %>

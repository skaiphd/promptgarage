<%= render 'account/shared/page' do |page| %>
  <% page.title t('.section') %>
  <% page.body do %>
    <%= cable_ready_updates_for @prompt_execution do %>
      <%= render 'account/shared/box', divider: true do |box| %>
        <% box.title t('.header') %>
        <% box.description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @prompt_execution %>
        <% end %>

        <% box.body do %>
          <% with_attribute_settings object: @prompt_execution, strategy: :label do %>
            <%= render 'shared/attributes/text', attribute: :label %>
            <%= render 'shared/attributes/text', attribute: :compiled_parameters %>
            <%= render 'shared/attributes/text', attribute: :parameters_summary %>
            <%= render 'shared/attributes/option', attribute: :model %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% box.actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @prompt_execution], class: first_button_primary if can? :edit, @prompt_execution %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @prompt_execution], method: :delete, class: first_button_primary, data: { confirm: t('.buttons.confirmations.destroy', model_locales(@prompt_execution)) } if can? :destroy, @prompt_execution %>
          <%= link_to t('global.buttons.back'), [:account, @prompt, :prompt_executions], class: first_button_primary %>
        <% end %>

        <% box.raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>

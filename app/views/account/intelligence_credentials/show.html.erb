          <% end %>
        <% end %>

        <% box.actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @intelligence_credential], class: first_button_primary if can? :edit, @intelligence_credential %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @intelligence_credential], method: :delete, class: first_button_primary, data: { confirm: t('.buttons.confirmations.destroy', model_locales(@intelligence_credential)) } if can? :destroy, @intelligence_credential %>
          <%= link_to t('global.buttons.back'), [:account, @team, :intelligence_credentials], class: first_button_primary %>
        <% end %>

        <% box.raw_footer do %>

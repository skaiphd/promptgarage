<% prompt_sections = prompt_sections.accessible_by(current_ability) %>
<% prompt = @prompt %>
<% context ||= prompt %>
<% collection ||= :prompt_sections %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% pagy ||= nil %>
<% pagy, prompt_sections = pagy(prompt_sections, page_param: :prompt_sections_page) unless pagy %>

<%= action_model_select_controller do %>
  <% cable_ready_updates_for context, collection do %>
    <%= render 'account/shared/box', pagy: pagy do |box| %>
      <% box.title t(".contexts.#{context.class.name.underscore}.header") %>
      <%# box.description do %>
        <%#= t(".contexts.#{context.class.name.underscore}.description#{"_empty" unless prompt_sections.any?}") %>
        <%#= render "shared/limits/index", model: prompt_sections.model %>
      <%# end %>

      <% box.table do %>
        <% if prompt_sections.any? %>
          <table class="table">
            <thead>
              <tr>
                <%= render "shared/tables/select_all" %>
                <th><%= t('.fields.name.heading') %></th>
                <%# ðŸš… super scaffolding will insert new field headers above this line. %>
                <th><%= t('.fields.created_at.heading') %></th>
                <th class="text-right"></th>
              </tr>
            </thead>
            <tbody data-controller="sortable" data-sortable-reorder-path-value="<%= url_for [:reorder, :account, context, collection] %>">
              <%= render partial: 'account/prompt_sections/prompt_section', collection: prompt_sections %>
            </tbody>
          </table>
        <% end %>
      <% end %>

      <% box.actions do %>
        <% unless hide_actions %>
          <% if context == prompt %>
            <% if can? :create, PromptSection.new(prompt: prompt) %>
              <%= link_to "t('.buttons.new')", [:new, :account, prompt, :prompt_section], class: "#{first_button_primary(:prompt_section)} new" %>
            <% end %>
          <% end %>

          <%# ðŸš… super scaffolding will insert new targets one parent action model buttons above this line. %>
          <%# ðŸš… super scaffolding will insert new bulk action model buttons above this line. %>
          <%= render "shared/bulk_action_select" if prompt_sections.any? %>

          <% unless hide_back %>
            <%= link_to t('global.buttons.back'), [:account, context], class: "#{first_button_primary(:prompt_section)} back" %>
          <% end %>
        <% end %>
      <% end %>

      <% box.raw_footer do %>
        <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
